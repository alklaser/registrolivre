<?xml version="1.0" encoding="utf-8"?>
<cruise xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="cruise-config.xsd" schemaVersion="75">
  <server artifactsdir="artifacts" commandRepositoryLocation="default" serverId="" >
    <security>
      <passwordFile path="/etc/go/htpasswd" />
    </security>
  </server>
  <pipelines group="PraiaThoughtworks">
    <pipeline name="RegistroLivre">
      <materials>
        <git url="https://github.com/ThoughtWorksInc/registrolivre" />
      </materials>
      <stage name="Build">
        <jobs>
          <job name="Build">
            <tasks>
              <exec command="./gradlew">
                <arg>build</arg>
              </exec>
            </tasks>
          </job>
        </jobs>
      </stage>
      <stage name="UI_Tests">
        <jobs>
          <job name="UI_Test">
            <tasks>
              <exec command="./gradlew">
                <arg>jsTest</arg>
              </exec>
            </tasks>
          </job>
        </jobs>
      </stage>
      <stage name="Unit_Tests">
        <jobs>
          <job name="Unit_Tests">
            <tasks>
              <exec command="./gradlew">
                <arg>test</arg>
              </exec>
            </tasks>
          </job>
        </jobs>
      </stage>
    </pipeline>
  </pipelines>
</cruise>
